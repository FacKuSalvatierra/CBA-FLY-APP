<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".Contact">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="359dp"
        android:layout_height="64dp"
        android:contentDescription="Texto describiendo acciones del QR"
        android:fontFamily="@font/poppins"
        android:text="¡Tocá el QR para ir directo a nuestra página!"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:typeface="normal"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="294dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="359dp"
        android:layout_height="64dp"
        android:contentDescription="Correo electrónico de contacto"
        android:fontFamily="@font/poppins"
        android:text="cbafly-contacto@gmail.com"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="italic"
        android:typeface="normal"
        tools:layout_editor_absoluteX="17dp"
        tools:layout_editor_absoluteY="200dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="319dp"
        android:layout_height="112dp"
        android:contentDescription="Cómo contactarnos"
        android:fontFamily="@font/poppins"
        android:text="Podés contactarnos a través de nuestro correo o página web:"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:typeface="normal"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="57dp" />

    <ImageButton
        android:id="@+id/enlaceQR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:contentDescription="QR que lleva a la página web de CBA-Fly"
        app:srcCompat="@drawable/qrcbaflycontacto"
        tools:layout_editor_absoluteX="73dp"
        tools:layout_editor_absoluteY="370dp" />

    <Button
        android:id="@+id/returnButton"
        android:layout_width="159dp"
        android:layout_height="53dp"
        android:backgroundTint="@color/light_blue2"
        android:contentDescription="Botón para regresar a Perfil"
        android:fontFamily="@font/poppins"
        android:gravity="center_horizontal|center_vertical"
        android:onClick="volverAtras"
        android:text="Volver"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:typeface="normal"
        app:strokeColor="@color/black"
        app:strokeWidth="1dp"
        tools:layout_editor_absoluteX="117dp"
        tools:layout_editor_absoluteY="680dp" />

</androidx.constraintlayout.widget.ConstraintLayout>