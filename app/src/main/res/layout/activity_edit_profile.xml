<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".EditProfile">

    <TextView
        android:id="@+id/editProfileTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Edición de perfil"
        android:fontFamily="@font/poppins"
        android:text="Editar Perfil"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="130dp"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/inputNombreCompletoPf"
        android:layout_width="391dp"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:ems="10"
        android:fontFamily="@font/poppins"
        android:hint="Nombre Completo"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHint="#212121"
        android:textSize="20sp"
        tools:ignore="ContentDescription"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="56dp" />

    <EditText
        android:id="@+id/inputEmailPf"
        android:layout_width="391dp"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:ems="10"
        android:fontFamily="@font/poppins"
        android:hint="Correo Electrónico"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHint="#3E2723"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="115dp" />

    <EditText
        android:id="@+id/inputPhone"
        android:layout_width="391dp"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:ems="10"
        android:fontFamily="@font/poppins"
        android:hint="Teléfono"
        android:inputType="phone"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHint="#1A237E"
        android:textSize="20sp"
        tools:ignore="ContentDescription"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="176dp" />

    <EditText
        android:id="@+id/inputDNI"
        android:layout_width="391dp"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:ems="10"
        android:fontFamily="@font/poppins"
        android:hint="DNI"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHint="#263238"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="230dp" />

    <EditText
        android:id="@+id/inputCodigoPostal"
        android:layout_width="391dp"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:ems="10"
        android:fontFamily="@font/poppins"
        android:hint="Código Postal"
        android:inputType="textPostalAddress"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHint="#1A237E"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="284dp" />

    <EditText
        android:id="@+id/inputCountry"
        android:layout_width="391dp"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:ems="10"
        android:fontFamily="@font/poppins"
        android:hint="País"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHint="#283593"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="345dp" />

    <EditText
        android:id="@+id/inputCity"
        android:layout_width="391dp"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:ems="10"
        android:fontFamily="@font/poppins"
        android:hint="Ciudad"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        tools:ignore="ContentDescription"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="399dp" />

    <Button
        android:id="@+id/editInfoButton"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:backgroundTint="#00AAFF"
        android:contentDescription="Botón para enviar la información del Perfil"
        android:fontFamily="@font/poppins"
        android:gravity="center_horizontal|center_vertical"
        android:onClick="editarInfo"
        android:text="Editar"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        android:typeface="normal"
        app:strokeColor="@color/black"
        app:strokeWidth="2dp"
        tools:layout_editor_absoluteX="96dp"
        tools:layout_editor_absoluteY="486dp" />

    <Button
        android:id="@+id/returnButtonEditprf"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:backgroundTint="@color/light_blue2"
        android:contentDescription="Botón para regresar a Perfil"
        android:fontFamily="@font/poppins"
        android:gravity="center_horizontal|center_vertical"
        android:onClick="volverAtras"
        android:text="Cancelar"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:typeface="normal"
        app:strokeColor="@color/black"
        app:strokeWidth="1dp"
        tools:layout_editor_absoluteX="97dp"
        tools:layout_editor_absoluteY="575dp" />
</androidx.constraintlayout.widget.ConstraintLayout>