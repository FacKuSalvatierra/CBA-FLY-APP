<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".Booking">

    <TextView
        android:id="@+id/bookingTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="139dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="140dp"
        android:layout_marginBottom="2dp"
        android:contentDescription="Vuelos"
        android:fontFamily="@font/poppins"
        android:text="Vuelos"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/infoOrigen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/infoOrigen"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/border"
        android:contentDescription="Origen"
        android:fontFamily="@font/poppins"
        android:padding="4dp"
        android:paddingStart="4dp"
        android:paddingLeft="4dp"
        android:paddingTop="4dp"
        android:paddingEnd="4dp"
        android:paddingRight="4dp"
        android:paddingBottom="4dp"
        android:text="Origen"
        android:textAlignment="center"
        android:textColor="@color/whiteish"
        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@+id/infoDestino"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bookingTitle" />

    <TextView
        android:id="@+id/infoDestino"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/border"
        android:contentDescription="Destino"
        android:fontFamily="@font/poppins"
        android:padding="4dp"
        android:paddingStart="4dp"
        android:paddingLeft="4dp"
        android:paddingTop="4dp"
        android:paddingEnd="4dp"
        android:paddingRight="4dp"
        android:paddingBottom="4dp"
        android:text="Destino"
        android:textAlignment="center"
        android:textColor="@color/whiteish"
        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@+id/infoHoraSalida"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infoOrigen" />

    <TextView
        android:id="@+id/infoHoraSalida"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/border"
        android:contentDescription="Horario Salida"
        android:fontFamily="@font/poppins"
        android:padding="4dp"
        android:paddingStart="4dp"
        android:paddingLeft="4dp"
        android:paddingTop="4dp"
        android:paddingEnd="4dp"
        android:paddingRight="4dp"
        android:paddingBottom="4dp"
        android:text="Horario Salida"
        android:textAlignment="center"
        android:textColor="@color/whiteish"
        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@+id/infoHoraLlegada"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infoDestino" />

    <TextView
        android:id="@+id/infoHoraLlegada"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/border"
        android:contentDescription="Horario Llegada"
        android:fontFamily="@font/poppins"
        android:padding="4dp"
        android:paddingStart="4dp"
        android:paddingLeft="4dp"
        android:paddingTop="4dp"
        android:paddingEnd="4dp"
        android:paddingRight="4dp"
        android:paddingBottom="4dp"
        android:text="Horario Llegada"
        android:textAlignment="center"
        android:textColor="@color/whiteish"
        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@+id/infoDuracion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infoHoraSalida" />

    <TextView
        android:id="@+id/infoDuracion"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/border"
        android:contentDescription="Duración"
        android:fontFamily="@font/poppins"
        android:padding="4dp"
        android:paddingStart="4dp"
        android:paddingLeft="4dp"
        android:paddingTop="4dp"
        android:paddingEnd="4dp"
        android:paddingRight="4dp"
        android:paddingBottom="4dp"
        android:text="Duración"
        android:textAlignment="center"
        android:textColor="@color/whiteish"
        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@+id/infoNumeroVuelo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infoHoraLlegada" />

    <TextView
        android:id="@+id/infoNumeroVuelo"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/border"
        android:contentDescription="Número Vuelo"
        android:fontFamily="@font/poppins"
        android:padding="4dp"
        android:paddingStart="4dp"
        android:paddingLeft="4dp"
        android:paddingTop="4dp"
        android:paddingEnd="4dp"
        android:paddingRight="4dp"
        android:paddingBottom="4dp"
        android:text="Número Vuelo"
        android:textAlignment="center"
        android:textColor="@color/whiteish"
        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@+id/infoTipoAvion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infoDuracion" />

    <TextView
        android:id="@+id/infoTipoAvion"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/border"
        android:contentDescription="Tipo Avión"
        android:fontFamily="@font/poppins"
        android:padding="4dp"
        android:paddingStart="4dp"
        android:paddingLeft="4dp"
        android:paddingTop="4dp"
        android:paddingEnd="4dp"
        android:paddingRight="4dp"
        android:paddingBottom="4dp"
        android:text="Tipo Avión"
        android:textAlignment="center"
        android:textColor="@color/whiteish"
        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@+id/infoMonto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infoNumeroVuelo" />

    <TextView
        android:id="@+id/infoMonto"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/border"
        android:contentDescription="Monto"
        android:fontFamily="@font/poppins"
        android:padding="4dp"
        android:paddingStart="4dp"
        android:paddingLeft="4dp"
        android:paddingTop="4dp"
        android:paddingEnd="4dp"
        android:paddingRight="4dp"
        android:paddingBottom="4dp"
        android:text="Monto"
        android:textAlignment="center"
        android:textColor="@color/whiteish"
        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infoTipoAvion" />

    <Button
        android:id="@+id/button"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_marginStart="131dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="132dp"
        android:layout_marginBottom="80dp"
        android:backgroundTint="@color/light_blue2"
        android:contentDescription="Botón para regresar a Inicio"
        android:fontFamily="@font/poppins"
        android:gravity="center_horizontal|center_vertical"
        android:onClick="volverAtras"
        android:text="Volver"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:typeface="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infoMonto"
        app:strokeColor="@color/black"
        app:strokeWidth="1dp" />

</androidx.constraintlayout.widget.ConstraintLayout>